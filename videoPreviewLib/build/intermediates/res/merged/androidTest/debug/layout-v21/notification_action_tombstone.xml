<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_container" style="@style/Widget.AppCompat.NotificationActionContainer"
    android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1"
    android:background="@null" android:enabled="false" android:orientation="horizontal"
    android:paddingStart="4dp">
    <ImageView android:id="@+id/action_image"
        android:layout_width="@dimen/notification_action_icon_size"
        android:layout_height="@dimen/notification_action_icon_size"
        android:layout_gravity="center|start" android:alpha="0.5" android:enabled="false"
        android:scaleType="centerInside" />
    <TextView android:id="@+id/action_text" style="@style/Widget.AppCompat.NotificationActionText"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center|start" android:alpha="0.5" android:clickable="false"
        android:ellipsize="end" android:enabled="false" android:paddingStart="4dp"
        android:singleLine="true" />
</LinearLayout>